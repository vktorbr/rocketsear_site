{% extends 'layout.njk' %}

{% block head %}
<title>Conteúdos | Rocketseat</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
<section>
    <div id="title">
        <h1>Conteúdos</h1>
    </div>
    <div id="cards">
        <div class="card" id="">
            <div class="card_image">
                <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/starter.svg" alt="logo Starter">
            </div>
            <div class="card_content">
                <h1>Starter</h1>
            </div>
            <div class="info_card">
                <p>5 módulos</p>
                <p class="price">Free</p>
            </div>
        </div>
        <div class="card" id="manifesto">
            <div class="card_image">
                <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/launchbase.svg" alt="logo Starter">
            </div>
            <div class="card_content">
                <h1>Launchbase</h1>
            </div>
            <div class="info_card">
                <p>5 módulos</p>
                <p class="price">Pago</p>
                </div>
            </div>
            <div class="card" id="privacy">
                <div class="card_image">
                <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/gostack.svg" alt="logo Starter">
                </div>
            <div class="card_content">
                <h1>Go Stack</h1>
            </div>
            <div class="info_card">
                <p>6 módulos</p>
                <p class="price">Pago</p>
                </div>
            </div>
    </div>
</section>

<div class="modal-overlay">
    <div class="modal">
        <a class="maximize-modal">
            <span class="material-icons">
                maximize
            </span>
        </a>
        <a class="close-modal">
            <i class="material-icons">close</i>
        </a>
        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>

<footer>
    <div class="menu" id="footer">
        <a href="https://github.com/Rocketseat" target="_blank">Github</a>
        <a href="http://instagram.com/rocketseat_oficial" target="_blank">Instagram</a>
        <a href="http://fb.com/rocketseat" target="_blank">Facebook</a>
    </div>
</footer>
<script src="scripts.js"></script>
{% endblock %}