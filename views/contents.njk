{% extends 'layout.njk' %}

{% block head %}
<title>Conteúdos | Rocketseat</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
<section>
    <div id="title">
        <h1>Conteúdos</h1>
    </div>
    <div id="cards">
        {% for course in courses %}
        <div class="card" id="{{course.id}}">
            <div class="card_image">
                <img src="{{course.image_url}}" alt="logo {{course.title}}">
            </div>
            <div class="card_content">
                <h1>{{course.title}}</h1>
            </div>
            <div class="info_card">
                <p>{{course.modules}}</p>
                <p class="price">{{course.price}}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

<div class="modal-overlay">
    <div class="modal">
        <a class="maximize-modal">
            <span class="material-icons">
                maximize
            </span>
        </a>
        <a class="close-modal">
            <i class="material-icons">close</i>
        </a>
        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>

<footer>
    <div class="menu" id="footer">
        <a href="https://github.com/Rocketseat" target="_blank">Github</a>
        <a href="http://instagram.com/rocketseat_oficial" target="_blank">Instagram</a>
        <a href="http://fb.com/rocketseat" target="_blank">Facebook</a>
    </div>
</footer>
<script src="scripts.js"></script>
{% endblock %}